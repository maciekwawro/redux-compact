{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": ["ES2015", "dom"],
    "jsx": "react",
    "target": "es5",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "./src/**/__tests__/**/*.ts"
  ]
}
